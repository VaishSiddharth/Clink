<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    >
    <gradient
        android:type="linear"
        android:startColor="#FF7A5BFE"
        android:centerColor="#E68868FC"
        android:endColor="#FF8C6CFB"
        android:angle="45" />
    <corners
        android:radius="50dp" />
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
    <stroke
        android:width="1dp"
        android:color="@color/white"/>

</shape>