<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.testlabic.datenearu.ClickedUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="370dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circleindicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="150dp"
                    app:ci_drawable="@drawable/ic_brightness_1_black_24dp"
                    app:ci_drawable_unselected="@drawable/ic_brightness_1_black"
                    app:ci_margin="3dp" />

                <include layout="@layout/toolbar_productpage" />

                <nl.dionsegijn.konfetti.KonfettiView
                    android:id="@+id/viewKonfetti"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:orientation="vertical">

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#a9a9b0"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <customfonts.MyTextView_SF_Pro_Display_Bold
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="--------"
                        android:textColor="#3b3b3b"
                        android:textSize="23sp" />


                    <customfonts.MyTextView_SF_Pro_Display_Bold
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="20 yr"
                        android:textColor="#3b3b3b"
                        android:textSize="23sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="21dp"
                    android:background="#1A979797" />

                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:lineSpacingExtra="4dp"
                    android:text="---------------------------------"
                    android:textSize="14sp" />


                <customfonts.MyTextView_SF_Pro_Display_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/match_instruction"
                    android:textColor="#3b3b3b"
                    android:textSize="13sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="#A3979797" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <customfonts.MyTextView_SF_Pro_Display_Semibold
                        android:layout_width="0dp"

                        android:layout_weight="1"
                        android:layout_height="33dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/rect_grey"
                        android:paddingLeft="14dp"
                        android:paddingTop="7dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="7.5dp"
                        android:text="Message"
                        android:textColor="#a6a6a6"
                        android:textSize="12sp" />

                    <customfonts.MyTextView_SF_Pro_Display_Semibold
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/rect_blue_border"
                        android:gravity="center"
                        android:padding="8dp"
                        android:id="@+id/attempt_match"
                        android:text="Attempt Match"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
