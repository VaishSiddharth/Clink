<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <customfonts.MyTextView_SF_Pro_Display_Bold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="119dp"
        android:padding="16dp"
        android:textColor="#000"
        android:gravity="center"
        android:text="Setting you up...(1/3)"
        android:textSize="20sp"
        android:id="@+id/robotoBold" />

    <customfonts.TextViewSFProDisplayRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/robotoBold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Your name ?"
        android:textSize="18sp"
        android:id="@+id/whatCanICallYou" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_margin="32dp"
        android:textColorHint="#000"
        android:layout_below="@id/whatCanICallYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your name..."
            android:textColorHint="#e5e5e5"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:text="NEXT"
        android:id="@+id/next_button"
        android:background="#000"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/progress_bar"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
