<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="@android:color/white">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <customfonts.MyTextView_SF_Pro_Display_Light

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="34dp"
           android:gravity="center"
           android:id="@+id/instruction"
           android:padding="16dp"
           android:text="@string/question_instruction"
           android:textSize="14sp"
           android:layout_alignParentLeft="true" />


       <customfonts.MyTextView_SF_Pro_Display_Semibold
           android:id="@+id/questionText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:layout_marginStart="0dp"
           android:layout_marginLeft="0dp"
           android:layout_marginTop="108dp"
           android:textColor="#212121"
           android:gravity="center"
           android:padding="16dp"
           android:text="What is your favourite fruit?"
           android:textSize="24sp" />


       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:id="@+id/ll1"
           android:layout_marginTop="72dp"
           android:layout_marginRight="32dp"
           android:layout_marginLeft="32dp"
           android:layout_below="@+id/questionText"
           android:layout_height="wrap_content">

           <customfonts.MyTextView_SF_Pro_Display_Light
               android:id="@+id/optA"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="16dp"
               android:layout_weight="1"
               android:background="@drawable/border_color_box"
               android:gravity="center"
               android:textColor="@color/shade_black"
               android:padding="16dp"
               android:text="Apple"

               android:textSize="16sp" />
           <customfonts.MyTextView_SF_Pro_Display_Light
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="Banana"
               android:textSize="16sp"
               android:textColor="@color/shade_black"

               android:gravity="center"
               android:background="@drawable/border_color_box"
                android:id="@+id/optB"
                android:padding="16dp"
               android:layout_height="wrap_content" />


       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_margin="32dp"
           android:layout_below="@+id/ll1"
           android:layout_height="wrap_content">

           <customfonts.MyTextView_SF_Pro_Display_Light
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="Grapes"
               android:padding="16dp"
               android:gravity="center"
                android:id="@+id/optC"
               android:textSize="16sp"
               android:background="@drawable/border_color_box"
               android:textColor="@color/shade_black"

               android:layout_marginRight="16dp"
               android:layout_height="wrap_content" />
           <customfonts.MyTextView_SF_Pro_Display_Light
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="Mango"
               android:textSize="16sp"
               android:gravity="center"
                android:padding="16dp"
               android:background="@drawable/border_color_box"
                android:id="@+id/optD"
               android:layout_height="wrap_content"
               android:textColor="@color/shade_black"
               />


       </LinearLayout>

   </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@drawable/gradation_black">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>






</android.support.v7.widget.CardView>