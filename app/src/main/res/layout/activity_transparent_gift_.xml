<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolorlessopacity">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent" />

    <com.cooltechworks.views.ScratchImageView
        android:id="@+id/sample_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104.5dp"
        android:layout_marginTop="246.5dp"
        android:layout_marginEnd="104.5dp"
        android:layout_marginBottom="246.5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/premium_bottle"
        />

    <ImageView
        android:id="@+id/premium_bottle"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="115dp"
        android:src="@drawable/premium_bottle"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/royal_bottle"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="115dp"
        android:src="@drawable/royal_bottle"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/regular_bottle"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="115dp"
        android:src="@drawable/regular_bottle"
        android:visibility="gone"/>

</RelativeLayout>