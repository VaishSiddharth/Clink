<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ru.github.igla.ferriswheel.FerrisWheelView
        android:layout_width="match_parent"
        android:id="@+id/google_progress"

        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:fwv_cabinsNumber="10"
        app:fwv_rotateSpeed="16" />

    <customfonts.TextViewSFProDisplayRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/statusMatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:padding="16dp"
        android:textColor="#212121"
        android:textSize="18sp" />

    <customfonts.MyTextView_SF_Pro_Display_Medium
        android:layout_width="wrap_content"
        android:text="Send a message! (25 points)"
        android:textSize="22sp"
        android:id="@+id/send_a_message"
        android:layout_height="wrap_content" />

    <customfonts.EditText__SF_Pro_Display_Light
        android:layout_width="wrap_content"
        android:layout_margin="16dp"

        android:layout_below="@+id/send_a_message"
        android:layout_height="wrap_content" />

</RelativeLayout>