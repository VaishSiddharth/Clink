<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar_editactivity" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <include
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/edit_dp_1"
                            layout="@layout/edit_profile_images" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:weightSum="1"
                        android:gravity="center">

                        <include
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0.5"
                            android:id="@+id/edit_dp_2"
                            layout="@layout/edit_profile_images" />

                        <include
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="0.5"
                            android:id="@+id/edit_dp_3"
                            layout="@layout/edit_profile_images" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/gradient_setupuser"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="@color/appcolor" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Enter Display Name"
                    android:maxLines="3"
                    android:textColor="#3b3b3b"
                    android:textSize="14sp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Display Name"
                    app:met_floatingLabelTextColor="@color/appcolor"
                    app:met_primaryColor="@color/appcolor"
                    app:met_underlineColor="@color/appcolor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/gradient_setupuser"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="@color/appcolor" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Enter Your Age"
                    android:inputType="number"
                    android:maxLines="3"
                    android:textColor="#3b3b3b"
                    android:textSize="14sp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Your Age"
                    app:met_floatingLabelTextColor="@color/appcolor"
                    app:met_primaryColor="@color/appcolor"
                    app:met_underlineColor="@color/appcolor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/gradient_setupuser"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="@color/appcolor" />

                <customfonts.MyTextView_SF_Pro_Display_Light
                    android:id="@+id/seriousitems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to Change Priority for finding Matches"
                    android:textColor="#3b3b3b"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/gradient_setupuser"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="@color/appcolor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:padding="0dp">

                    <customfonts.MyTextView_SF_Pro_Display_Light
                        android:id="@+id/blurinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="5"
                        android:text="Blur profile "
                        android:textColor="#3b3b3b"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/blurProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:paddingEnd="16dp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/gradient_setupuser"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="@color/appcolor" />

                <customfonts.MyTextView_SF_Pro_Display_Light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of correct answers to pass quiz:"
                    android:textColor="#3b3b3b"
                    android:textSize="14sp" />


                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/gradient_setupuser"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="@color/appcolor" />


                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:lineSpacingExtra="4dp"
                    android:text="---------------------------------"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <customfonts.MyTextView_SF_Pro_Display_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/match_instruction"
                    android:textColor="#3b3b3b"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="#A3979797"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
