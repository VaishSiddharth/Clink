<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signinbackground"
    tools:context="com.testlabic.datenearu.Activities.SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/applogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/final_app_logo1"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/applogotext"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/signlogotext"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signin_button"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingTop="10dp"
            android:paddingRight="32dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_facebook" />

            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:text="Continue with Facebook"
                android:textColor="#3b3b3b"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:background="@drawable/signin_button"
            android:orientation="horizontal"
            android:paddingLeft="38dp"
            android:paddingTop="10dp"
            android:paddingRight="38dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_search" />

            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Continue with Google"
                android:textColor="#3b3b3b"
                android:textSize="12sp" />

        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="#33ffffff" />

            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="or"
                android:textColor="#99ffffff"
                android:textSize="10sp" />

            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="#33ffffff" />


        </LinearLayout>


        <customfonts.MyTextView_SF_Pro_Display_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rect"
            android:paddingLeft="55dp"
            android:paddingTop="12dp"
            android:paddingRight="55dp"
            android:paddingBottom="12dp"
            android:text="Signup with Email"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Existing user?"
                android:textColor="#B3ffffff"
                android:textSize="11.5sp"
                android:visibility="invisible" />

            <customfonts.MyTextView_SF_Pro_Display_Semibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="Login now"
                android:textColor="#ffffff"
                android:textSize="11.5sp"
                android:visibility="invisible" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/test"
        android:layout_width="73dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
        android:id="@+id/google_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible" />

</RelativeLayout>
