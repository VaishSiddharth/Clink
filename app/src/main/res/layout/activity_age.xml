<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/next_icon" />

    <customfonts.MyTextView_SF_Pro_Display_Bold
        android:id="@+id/robotoBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Setting you up...(2/4)"
        android:textColor="#000"
        android:textSize="20sp" />

    <customfonts.TextViewSFProDisplayRegular
        android:id="@+id/whatCanICallYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/robotoBold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Your Birthday ?"
        android:textSize="18sp" />

            <com.mikhaellopez.lazydatepicker.LazyDatePicker
                android:id="@+id/lazyDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/whatCanICallYou"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="193dp"
                app:ldp_date_format="mm-dd-yyyy" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
