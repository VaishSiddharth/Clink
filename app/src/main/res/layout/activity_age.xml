<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_action_back" />

    <customfonts.TextViewSFProDisplayRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Quick Setup!"
        android:textColor="@color/black"
        android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/next"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="20dp"
                android:layout_gravity="right"
                android:src="@drawable/next_icon" />

            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:id="@+id/robotoBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Setting you up...(2/5)"
                android:textColor="#000"
                android:textSize="20sp" />

            <customfonts.TextViewSFProDisplayRegular
                android:id="@+id/whatCanICallYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Your Birthday ?"
                android:textSize="18sp" />

            <com.mikhaellopez.lazydatepicker.LazyDatePicker
                android:id="@+id/lazyDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp"
                app:ldp_date_format="mm-dd-yyyy" />
        </LinearLayout>

</LinearLayout>
