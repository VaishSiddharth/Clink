<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <customfonts.MyTextView_SF_Pro_Display_Bold
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:id="@+id/date"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="36dp"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_height="40dp"
            app:civ_border_color="@color/appcolor"
            app:civ_border_width="1dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/profile"
             />

        <customfonts.MyTextView_SF_Pro_Display_Semibold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rect_white_border"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingRight="25dp"
            android:paddingBottom="13dp"
            android:text="----------"
            android:id="@+id/textview_message"
            android:textColor="#3b3b3b"
            android:textSize="13sp" />

    </LinearLayout>

    <customfonts.TextViewSFProDisplayRegular

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="1dp"
        android:text="24m ago"
        android:id="@+id/textview_time"
        android:textColor="#a9a9b0"
        android:textSize="10sp" />
</LinearLayout>