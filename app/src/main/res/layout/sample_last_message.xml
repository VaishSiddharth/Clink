<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/toolbar"
        android:background="#efefef" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:padding="6dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/profile"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keith Mills"
                    android:textSize="15sp"
                    android:textColor="#212121"/>

                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:id="@+id/onlineStatus"
                    android:visibility="invisible"
                    android:background="@drawable/ic_online_"/>

                <TextView
                    android:id="@+id/numberOfNewMessages"
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:textSize="10sp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circle_blue"/>

                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24m ago"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="12.5sp"
                    android:textColor="#a9a9b0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/replysymbol"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/replysymbol"/>


                <customfonts.MyTextView_SF_Pro_Display_Medium
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:layout_marginEnd="32dp"
                    android:maxLines="1"
                    android:text="Hey, would you be interested in ..."
                    android:textColor="#a9a9b0"
                    android:textSize="13sp"
                    android:layout_marginRight="32dp" />

                <ImageView
                    android:id="@+id/n2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_grey"/>


                <ImageView
                    android:id="@+id/readStat"
                    android:layout_marginLeft="0dp"
                    android:layout_width="18dp"
                    android:paddingEnd="2dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_check"
                    android:paddingRight="2dp" />

                <ImageView
                    android:id="@+id/n4"
                    android:layout_marginLeft="12dp"
                    android:layout_width="11dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="7dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_credit_card"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>