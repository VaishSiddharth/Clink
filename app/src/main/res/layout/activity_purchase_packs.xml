<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background4"
    android:layout_height="match_parent"
    tools:context=".BillingUtils.PurchasePacks">

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/finish"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_left" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingTop="250dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/gradient_setupuser_shade"

                android:layout_height="match_parent">

                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/firstPack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="#fff"
                    android:text="XXXX" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/gradient_setupuser_shade"

                android:layout_height="match_parent" >

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    android:text="XXXX"
                    android:textColor="#fff"

                    android:id="@+id/secondPack"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:layout_height="100dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/gradient_setupuser_shade"

                android:layout_height="match_parent" >

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:text="XXXX"
                    android:padding="16dp"
                    android:textColor="#fff"
                    android:id="@+id/thirdPack"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <customfonts.TextViewSFProDisplayRegular
        android:id="@+id/rewardAd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="99dp"
        android:gravity="center"
        android:text="Watch an ad and get 20 points" />
</RelativeLayout>